<?xml version='1.0' encoding='utf-8'?>
<widget id="com.roootsj.rob" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Roootsj</name>
    <description>
        A new Roootsj Cordova app.
    </description>
    <author email="rob@roootsj.com" href="https://app.roootsj.com">
        Roootsj Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
	<plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
	<plugin name="cordova-plugin-camera" spec="~2.4.0" />
	<plugin name="cordova-plugin-device-orientation" spec="~1.0.6" />
	<plugin name="cordova-plugin-network-information" spec="1.3.2" />
	<plugin name="cordova-plugin-inappbrowser" spec="~1.7.0" browserOnly="true"/>
	<plugin name="cordova-plugin-globalization" spec="~1.0.6" />
	<plugin name="cordova-plugin-geolocation" spec="~2.4.2" />
	<plugin name="cordova-plugin-device" spec="~1.1.4" />
	
	<preference name="LoadUrlTimeoutValue" value="70000"/>
	<preference name="windows-target-version" value="10.0" />
	<preference name="DisallowOverscroll" value="true"/> 
	<preference name="fullscreen" value="false" />
	<preference name="SplashScreen" value="splash"/>
	<preference name = "SplashScreenDelay" value = "4000" />
	<preference name="ShowSplashScreenSpinner" value="false" />
	<preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
	<preference name="Cordova-version" value="cli-6.5.0" />
	
    <access origin="*" />
	<access origin="https://www.facebook.com/" />
	
	<icon src="icon.png" />
	<platform name="windows">
		<icon height="48" platform="windows" src="res/icon/windows-phone/icon-48.png" width="48"/>
		<icon height="62" platform="windows" src="res/icon/windows-phone/icon-62-tile.png" width="62"/>
		<icon height="173" platform="windows" src="res/icon/windows-phone/icon-173-tile.png" width="173"/>
		<splash height="800" platform="windows" src="res/screen/windows-phone/screen-portrait.jpg" width="480"/>
		<splash height="800" platform="windows" src="res/screen/windows-phone/screen-portrait.png" width="480"/>
	</platform>	
	 <platform name="wp8">
        <icon height="99" platform="wp8" src="www/res/icon/wp8/ApplicationIcon.png" width="99" />
        <icon height="159" platform="wp8" src="www/res/icon/wp8/Background.png" width="159" />
        <splash height="1280" platform="wp8" src="www/res/screen/wp8/screen-portrait.jpg" width="768" />
    </platform>
	
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    
	
	<allow-intent href="*" />
	<allow-navigation href="*" />
</widget>
